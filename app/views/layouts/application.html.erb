<!DOCTYPE html>
<html>
<head>
  <title>My recipes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Renderiza la vista parcial _navigation ubicada en la carpeta views/layouts -->
  <%= render 'layouts/navigation' %>
  
  <div class="container">
      <%= render 'layouts/messages' %>
      <%= yield %>
      <!-- Renderiza la vista parcial _footer ubicada en la carpeta views/layouts -->
      <%= render 'layouts/footer' %>      
  </div>

</body>
</html>
